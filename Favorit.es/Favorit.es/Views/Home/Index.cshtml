@model  FlickrNet.PhotoCollection
@*on the first line we declare our view's model, this is the object that dictates the type of the "Model" property, and is primarily how we pass data from the controller to the view*@

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Favorit.es</h1>
    <p class="lead">Search for new favorit.es</p>
    
    <form class="form-inline" method="post" action="@Url.Action("Index", "Home")">
        <div    >
            <label for="searchText">Show me:</label>
            <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Kittens">
            <button type="submit" class="btn btn-default">Go</button>
        </div>
        
    </form>


</div>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xs-6 col-md-4">
            <a href="@Url.Action("favorite", "home", new { id = item.PhotoId, title = item.Title, url = item.Small320Url })">
                <img class="img-thumbnail" src="@item.Small320Url" />
            </a>
        </div>
    }
</div>